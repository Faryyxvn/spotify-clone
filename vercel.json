{
    "builds": [
        { "src": "backend/package.json", "use": "@vercel/node" },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "buildCommand": "npm run build"
            }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/backend/src/index.js" },
        { "src": "/(.*)", "dest": "/index.html", "headers": { "Cache-Control": "s-maxage=0" } }
    ]
}
